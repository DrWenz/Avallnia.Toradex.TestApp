<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Toradex.TestApp"
             x:Class="Toradex.TestApp.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml" />
        <StyleInclude Source="avares://Toradex.TestApp/Theme/Button.Power.axaml" />
        <StyleInclude Source="avares://Toradex.TestApp/Theme/Button.Back.axaml" />

        <Style Selector="TextBlock">
            <Setter Property="FontFamily"
                    Value="avares://Toradex.TestApp/Assets/ProximaNova-Regular.otf#Proxima Nova" />
        </Style>
    </Application.Styles>
</Application>